@*
    Partial View ->It only renders a part of your content and this is usefull in a couple different scenarios
    1.using it if there is a complicated user interface ->break up a large or complex page into simpler pieces
    2.Re use chunks of html display restaurant content at multiple location.
    Deleting @page directive to use it as partial view.
*@
@using OdeToFood.Core
@model Restaurant
@*<div class="panel panel-default">
    <div class= "panel-heading"*@
<head>
    <script src="https://kit.fontawesome.com/da94fa27ef.js" crossorigin="anonymous"></script>
</head>
<div class="panel panel-default">
    <div class="panel-heading"> 
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location:@Model.Location</span>
        <span>Cuisine:@Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        @*href="/Restaurants/Details?restaurantId = @restaurant.Id"*@
        <a class="btn btn-lg"
           asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            Details
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-search">Edit</i>
        </a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-search">Delete</i>
        </a>
    </div>
</div>
